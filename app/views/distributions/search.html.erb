<div class="container">

  <h1>Résultats</h1>

  <div class="row">
  <div class="col-sm-6">
      <div class="list-group">
        <% @results.each do |result| %>
          <%= link_to distribution_path(result[:distribution]), class: "list-group-item" do %>
            <h4 class="list-group-item-heading"><%= result[:distribution].organization.organization_name %></h4>
            <p class="list-group-item-text">
              Le <%= result[:occurrence].strftime("%m/%e/%Y") %>, de <%= result[:occurrence].strftime("%Hh%M") %> à <%=result[:occurrence].end_time.strftime("%Hh%M") %><br>
              <%= result[:distribution].address %>
            </p>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="map-wrapper">
        <div id="map"></div>
      </div>
    </div>


  </div>

</div>

<% content_for(:after_js) do %>

  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>
