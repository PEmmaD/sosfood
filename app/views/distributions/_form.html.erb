
<%= simple_form_for (@distribution) do |f| %>
<%= f.error_notification %>
<%= f.input :name, label: "Nom de la distribution", hint: "Si laissé vide, le nom de l'organisation s'affichera à la place." %>
<%= f.input :address, input_html: { onFocus: "geolocate()" }, label: "Adresse de distribution", required: true, placeholder: "" %>
<%= f.input :address_1, :as => :hidden  %>
<%= f.input :address_2, label: "Complement d'adresse" %>
<%= f.input :postal_code, placeholder: "75012", input_html: { id: "postal_code" }, :as => :hidden  %>
<%= f.input :city, placeholder: "Paris", input_html: { id: "locality" }, :as => :hidden %>
<%= f.input :country, placeholder: "France", as: :string, input_html: { id: "country" }, :as => :hidden  %>
<%= f.input :station, label: "Transports en commun" %>
<%= f.input :frequency, as: :radio_buttons, collection: [["Régulière", :regular], ["Ponctuelle", :once]], item_wrapper_class: "radio-inline", label: "Périodicité", required: true, checked: :regular %>
<%= f.input :date, wrapper_html: { id: 'datepicker' } %>
<%= f.input :weekdays, as: :check_boxes, collection: [["Mon", :mon], ["Tue", :tue], ["Wed", :wed], ["Thu", :thu], ["Fri", :fri], ["Sat", :sat], ["Sun", :sun]], item_wrapper_class: "checkbox-inline", wrapper_html: { id: 'dayspicker'}, checked: @recurrence[:days] %>
<div class="row">
  <div class="col-xs-6">
    <%= f.input :start_time, input_html: { id: 'start_time' }, label: "Heure de début" %>
  </div>
  <div class="col-xs-6">
    <%= f.input :end_time, input_html: { id: 'end_time' }, label: "Heure de fin" %>
  </div>
</div>
<%= f.button :submit %>
<% end %>


<% content_for(:after_js) do %>
<script>
  $('#datepicker input').datepicker({
    format: "dd/mm/yyyy",
    weekStart: 1,
    language: "fr",
    autoclose: true,
    todayHighlight: true
  });

  $('#start_time').timepicker({ 'timeFormat': 'H\\hi', 'scrollDefault': 'now' });
  $('#end_time').timepicker({ 'timeFormat': 'H\\hi', 'scrollDefault': 'now' });

  $('#datepicker').hide();
  $('#dayspicker').show();

  $('.distribution_frequency input').click(function() {
    var frequency = $(".distribution_frequency input[type='radio']:checked").attr('id');
    if (frequency == "distribution_frequency_ponctuelle") {
      $('#datepicker').fadeIn();
      $('#dayspicker').hide();
    } else if (frequency == "distribution_frequency_rgulire") {
      $('#datepicker').hide();
      $('#dayspicker').fadeIn();
    }
  });

</script>
<% end %>
