<div class="container">
  <div class="row">
    <div class="col-sx-12 col-offset-sx-0 col-sm-6 col-sm-offset-3 col-md-8 col-md-offset-2">
      <h2><%= @distribution.name %></h2>
      <h4><%= t('.place') %> :</h4>
        <%= @distribution.address_1 %>,
        <%= @distribution.city %>,
        <%= @distribution.country %>
        <p>Station: <%= @distribution.station %></p>
      <h4><%= t('.distributor') %> :</h4>
        <%= link_to @distribution.organization.organization_name, organization_path(@distribution.organization) %>
      </p>
      <p>Organized by: <%= @distribution.organization.organization_name %></p>
      <p>Recurrence: <%= @recurrence %></p>
      <ul>
        <% @recurrence.first(10).each do |recurrence| %>
          <li>
            <%= recurrence.strftime("%a, %e %b %Y %Hh%M") %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<%= link_to t(".back"), distributions_path %>
<% if policy(@distribution).edit? %>
  <%= link_to t(".update"), edit_distribution_path(@distribution) %>
<% end %>
<% if policy(@distribution).destroy? %>
  <%= link_to t(".delete"), distribution_path(@distribution), method: :delete, data: { confirm: I18n.t('confirm_delete') } %>
<% end %>


