<div class="container">
  <div class="row">
    <div class="col-sx-12 col-sm-6 col-md-4">
      <h2><%= t('.title') %></h2>
      <% @distributions.each do |distribution| %>
        <ul>
          <li>
            <%= link_to distribution_path(distribution) do %>
              <%= distribution.name %>
              <%= distribution.address_1 %>
              <%= distribution.city %>
              <%= distribution.postal_code %>
            <% end %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</div>
<% if policy(Distribution).create? %>
  <%= link_to 'Add new distribution', new_distribution_path(@distribution) %>
<% end %>
